<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.handy"
		name="Atari Lynx (Handy)"
		version="0.95"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
                   library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>Lynx</platforms>
		<extensions>lnx</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<supports_keyboard>false</supports_keyboard>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Handy v0.95</summary>
		<description>Handy is an Atari Lynx emulator by K. Wilkins for Windows 95/98/NT/2000/XP.

Supported files: .lnx</description>
		<license>zlib</license>
		<platform>@PLATFORM@</platform>
		<nofanart>true</nofanart>
	</extension>
</addon>

